{
  "kind": "collectionType",
  "collectionName": "quests",
  "info": {
    "singularName": "quest",
    "pluralName": "quests",
    "displayName": "Quest"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "desc": {
      "type": "richtext"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "main",
        "sub",
        "daily"
      ]
    },
    "level_requirement": {
      "type": "integer",
      "default": 1
    },
    "reward_point": {
      "type": "integer"
    },
    "reward_experience": {
      "type": "integer"
    },
    "quest_progress": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::quest-progress.quest-progress",
      "mappedBy": "quest"
    }
  }
}
